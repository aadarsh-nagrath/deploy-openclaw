# ============================================================================
# Environment Configuration Template
# ============================================================================
# Copy this file to .env and fill in your values
# ============================================================================

# ----------------------------------------------------------------------------
# Gateway Configuration
# ----------------------------------------------------------------------------
OPENCLAW_PORT=18789
OPENCLAW_CANVAS_PORT=18793
OPENCLAW_BIND=lan
OPENCLAW_GATEWAY_TOKEN=<generate-with-openssl-rand>

# ----------------------------------------------------------------------------
# Node Environment
# ----------------------------------------------------------------------------
NODE_ENV=production
OPENCLAW_LOG_LEVEL=info
OPENCLAW_LOG_FORMAT=json

# ----------------------------------------------------------------------------
# AI Provider API Keys
# ----------------------------------------------------------------------------
# Anthropic (Claude)
ANTHROPIC_API_KEY=

# OpenAI (GPT models)
OPENAI_API_KEY=

# Google (Gemini)
GOOGLE_API_KEY=

# Default model
OPENCLAW_AGENT_MODEL=claude-sonnet-4

# ----------------------------------------------------------------------------
# Messaging Platform Tokens
# ----------------------------------------------------------------------------
# Telegram Bot (get from @BotFather)
TELEGRAM_BOT_TOKEN=

# Discord Bot (get from Discord Developer Portal)
DISCORD_BOT_TOKEN=

# Slack (get from Slack App settings)
SLACK_BOT_TOKEN=
SLACK_APP_TOKEN=

# ----------------------------------------------------------------------------
# Security & Sandboxing
# ----------------------------------------------------------------------------
OPENCLAW_SANDBOX_MODE=non-main
OPENCLAW_TOOLS_ELEVATED=false

# ----------------------------------------------------------------------------
# Performance Tuning
# ----------------------------------------------------------------------------
OPENCLAW_MAX_CONCURRENT=4
OPENCLAW_SUBAGENT_MAX_CONCURRENT=8

# ----------------------------------------------------------------------------
# Optional: Custom Configuration
# ----------------------------------------------------------------------------
# TZ=UTC
# OPENCLAW_CUSTOM_CONFIG_PATH=/path/to/custom/config.json
